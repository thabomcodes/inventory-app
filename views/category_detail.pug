extends layout 

block content 
    div.content 

        h1 Category: #{category.name}
        p #[strong Description:] #{category.description}

        div(style='margin-left:20px;margin-top:20px')

            h4 Items
            if category_items.length 
                dl 
                    each item in category_items 
                        dt
                            a(href=item.url) #{item.name}
                        dd #{item.description}
            else 
                p This category has no items.
        hr
        p
            a(href=category.url+'/update') Update author
        p
            a(href=category.url+'/delete') Delete author